<div class="px-4 py-4 flex items-center justify-between hover:bg-gray-50">
  <div class="flex items-center">
    <div class="flex-shrink-0">
      <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
        <span class="text-sm font-medium text-gray-700">
          <%= user.nombre_mostrar.first.upcase %>
        </span>
      </div>
    </div>
    <div class="ml-4">
      <div class="text-sm font-medium text-gray-900">
        <%= user.nombre_mostrar %>
      </div>
      <div class="text-sm text-gray-500">
        <%= user.email_address %>
      </div>
      <div class="text-xs text-gray-400">
        Miembro desde <%= user.created_at.strftime("%d/%m/%Y") %>
      </div>
    </div>
  </div>
  <div class="flex space-x-2">
    <%= link_to "Ver", user_path(user), class: "text-blue-600 hover:text-blue-900" %>
    <% if user == Current.user %>
      <%= link_to "Editar", edit_user_path(user), class: "text-green-600 hover:text-green-900" %>
    <% end %>
  </div>
</div>
